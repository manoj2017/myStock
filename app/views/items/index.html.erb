<% flash.each do |type, msg| %>
  <% if (type == "notice") %>
    <div class="alert alert-success">
      <%= msg %>
    </div>
  <% elsif (type == "error") %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% else %>     
    <div class="alert alert-info">
      <%= msg %>
    </div>
  <% end %>
<% end %>


<div class="row">
    <div class="digg_pagination" style="width: 60%;margin-left: 1%;">
    <div class="page_info">
      <%= page_entries_info @items %>
    </div>
  </div>
  <div>
    <%= search_form_for(@q,url: items_path, id: 'items_search_form') do |f| %>
      <%=f.text_field :name_cont, placeholder: 'Name', class: "form-input"%>
      <%=f.select :state_eq, ['delisted', 'listed'], {:include_blank => 'State'}, class: "form-input"  %>
      <%= f.submit :Search, class: "form-input btn-blue", style: "background: cornflowerblue;" %>
    <%end%>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Price</th>
      <th>State</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.weight %></td>
        <td><%= item.price %></td>
        <td><%= item.state %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
    <%= will_paginate @items, :container => false %>
</div>
